<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PassSeniorCitizenRequest">

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/bg_top_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_bg_topheader"/>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        style="@style/TextViewTheme"
        android:text="@string/Senior_Citizen_pass_request"
        android:id="@+id/tvSeniorCitizenPassRequest"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <TextView
        style="@style/TextViewTheme"
        android:text="@string/select_Source"
        android:id="@+id/sSource"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerSource"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_background"/>
    <TextView
        style="@style/TextViewTheme"
        android:text="@string/select_Destination"
        android:id="@+id/sDestination"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerDestination"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPassRequest"
                style="@style/ButtonTheme"
                android:layout_weight="1"
                android:text="@string/Confirm"/>

            <Button
                android:id="@+id/btnCancel"
                style="@style/ButtonTheme"
                android:text="@string/cancel"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>